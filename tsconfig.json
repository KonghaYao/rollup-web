{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "test/**/*.vue",
        "test/**/*.ts",
        "test/**/*.d.ts",
        "src/shim/fs.js",
        "src/shim/glob.js",
        "test/resolve.js",
        "src/shim/url.js",
        "src/shim/errors.ts",
        "src/shim/brotli.js",
        "src/shim/loader-utils/lib/interpolateName.js",
        "src/plugins/worker/worker.module.js",
        "src/Evaluator/System/common.js"
    ]
}
